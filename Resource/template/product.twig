{% extends 'SalesReport/Resource/template/index.twig' %}

{% set report_title = '商品別集計' %}
{% set action = url('admin_sales_report_product') %}
{% set menus = ['admin_sales_report', 'admin_sales_report_product'] %}

{% block chart %}
    <script>
        var graphData = {{ graphData|raw }};
        window.onload = function() {
            var dataSet = graphData.datasets;
            graphData.datasets = [dataSet];
            //create pie chart
            if (graphData != null) {
                var config = {
                    type: 'pie',
                    data: graphData,
                    options: {
                        responsive: true,
                        tooltips: {
                            callbacks: {
                                label : function tooltipsRender(tooltipItem, graphData) {
                                    var index = tooltipItem.index;
                                    var tooltipData = graphData.datasets[0].data[index];
                                    var tooltipLabel = graphData.labels[index];
                                    return tooltipLabel + ' : ¥' + moneyFormat(tooltipData);
                                }
                            }
                        }
                    }
                };
                var ctx = document.getElementById("chart").getContext("2d");
                new Chart(ctx, config);
            }
            //export csv
            $('#export-csv').click(function () {
                $("#product-table").tableToCSV();
            });
        };
    </script>
{% endblock %}

{% block option %}{% endblock %}

{% block table %}
    {% if app.request.method == 'POST' and rawData is not null %}
        <div class="row">
            <div class="flR" style="margin: 10px 20px 10px 0;">
                <a id="export-csv" class="btn btn-default" data-export="export">CSV ダウンロード</a>
            </div>
            <div class="col-md-12">
                <div class="box">
                    <div class="box-body no-header no-padding">
                        <div class="table-responsive">
                            <table class="table table-striped" id="product-table">
                                <thead>
                                <tr>
                                    <th>商品コード</th>
                                    <th>商品名</th>
                                    <th>購入件数</th>
                                    <th>数量</th>
                                    <th>単価</th>
                                    <th>金額</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for row in rawData %}
                                    <tr>
                                        <td>{{ row.ProductClass.code }}</td>
                                        {% if row.ProductClass.ClassCategory1 is not null %}
                                            {% if row.ProductClass.ClassCategory2 is not null %}
                                                <td>{{ row.ProductClass.Product.name }} {{ row.ProductClass.ClassCategory1.name }} {{ row.ProductClass.ClassCategory2.name }}</td>
                                            {% else %}
                                                <td>{{ row.ProductClass.Product.name }} {{ row.ProductClass.ClassCategory1.name }}</td>
                                            {% endif %}
                                        {% else %}
                                            <td>{{ row.ProductClass.Product.name }}</td>
                                        {% endif %}
                                        <td>{{ row.time|number_format }}</td>
                                        <td>{{ row.quantity|number_format }}</td>
                                        <td class="price-format">{{ row.price|price }}</td>
                                        <td class="hidden">{{ row.price|raw }}</td>
                                        <td class="price-format">{{ row.total|price }}</td>
                                        <td class="hidden">{{ row.total|raw }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div>
    {% endif %}
{% endblock %}
